player_bones_list = {}

function player_bones_list.spine()
    return {
        "ValveBiped.Bip01_Pelvis",
        "ValveBiped.Bip01_Spine",
        "ValveBiped.Bip01_Spine1",
        "ValveBiped.Bip01_Spine2",
        "ValveBiped.Bip01_Spine4",
        "ValveBiped.Bip01_Neck1",
        "ValveBiped.Bip01_Head1",
    }
end

function player_bones_list.leg(leftright)
    return {
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Thigh",
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Calf",
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Foot"
    }
end

function player_bones_list.arm(leftright)
    return {
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Clavicle",
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_UpperArm",
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Forearm",
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Hand",
    }
end

