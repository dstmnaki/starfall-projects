        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Finger32",
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Finger2",
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Finger21",
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Finger22",
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Finger1",
        "ValveBiped.Bip01_"..(leftright and "L" or "R").."_Finger11",
